<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/pictureCardView1"
            android:layout_width="57.5dp"
            android:layout_height="57.5dp"
            app:cardCornerRadius="105dp"
            app:cardBackgroundColor="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardCornerRadius="105dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/ProfileImageView"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pictureCardView1"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/displaynameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:text="Display Name"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:layout_marginTop="2dp" /> <!-- Adjust the margin value as desired -->

            <TextView
                android:id="@+id/lastMessTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#8E5704"
                android:layout_marginTop="8dp"
                android:fontFamily="serif-monospace "
                android:textStyle="bold"
                android:text="Last Message" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:shadowColor="@color/purple_200"
                android:layout_marginLeft="145dp"
                android:textColor="#8E5704"
                android:textStyle="bold"
                android:text="Date"

                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
